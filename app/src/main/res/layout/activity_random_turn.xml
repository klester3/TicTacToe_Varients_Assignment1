<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <ImageView
        android:id="@+id/imageView_gameboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ttt_gameboard" />

    <ImageView
        android:id="@+id/imageView_tile_a2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:tag="b"
        app:layout_constraintEnd_toStartOf="@+id/imageView_tile_a3"
        app:layout_constraintStart_toEndOf="@+id/imageView_tile_a1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blank_square" />

    <ImageView
        android:id="@+id/imageView_tile_a1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:tag="b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blank_square" />

    <ImageView
        android:id="@+id/imageView_tile_b3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:tag="b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_tile_a3"
        app:srcCompat="@drawable/blank_square" />

    <ImageView
        android:id="@+id/imageView_tile_b2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:tag="b"
        app:layout_constraintEnd_toStartOf="@+id/imageView_tile_b3"
        app:layout_constraintStart_toEndOf="@+id/imageView_tile_b1"
        app:layout_constraintTop_toBottomOf="@+id/imageView_tile_a2"
        app:srcCompat="@drawable/blank_square" />

    <ImageView
        android:id="@+id/imageView_tile_b1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:tag="b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_tile_a1"
        app:srcCompat="@drawable/blank_square" />

    <ImageView
        android:id="@+id/imageView_tile_a3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:tag="b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blank_square" />

    <ImageView
        android:id="@+id/imageView_tile_c3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:tag="b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_tile_b3"
        app:srcCompat="@drawable/blank_square" />

    <ImageView
        android:id="@+id/imageView_tile_c2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:tag="b"
        app:layout_constraintEnd_toStartOf="@+id/imageView_tile_c3"
        app:layout_constraintStart_toEndOf="@+id/imageView_tile_c1"
        app:layout_constraintTop_toBottomOf="@+id/imageView_tile_b2"
        app:srcCompat="@drawable/blank_square" />

    <ImageView
        android:id="@+id/imageView_tile_c1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:tag="b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_tile_b1"
        app:srcCompat="@drawable/blank_square" />

    <ImageButton
        android:id="@+id/imageButton_quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ttt_random_quit" />

    <ImageButton
        android:id="@+id/imageButton_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ttt_random_about" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ttt_random_board2" />

    <TextView
        android:id="@+id/textView_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="95dp"
        android:text="TextView"
        android:textColor="#ff0000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>